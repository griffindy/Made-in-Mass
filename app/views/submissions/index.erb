<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first active"><%= link_to pat(:list), url(:submissions, :index) %></li>
      <li><%= link_to pat(:new), url(:submissions, :new) %></li>
    </ul>
  </div>
  <div class="content">
    <h2 class="title"><%= pat(:all) %> <% mt(:submissions) %></h2>
    <div class="inner">
      <table class="table">
        <tr>
          <th class="first"><%= mat(:submission, :id) %></th>
          <th><%= mat(:submission, :company) %></th>
          <th><%= mat(:submission, :description) %></th>
          <th><%= mat(:submission, :hiring) %></th>
          <th><%= mat(:submission, :created_at) %></th>
          <th><%= mat(:submission, :updated_at) %></th>
          <th class="last">&nbsp;</th>
        </tr>
        <% @submissions.each do |submission| %>
        <tr>
          <td class="first"><%= submission.id %></td>
          <td><%= submission.company %></td>
          <td><%= submission.description %></td>
          <td><%= submission.hiring %></td>
          <td><%= submission.created_at %></td>
          <td><%= submission.updated_at %></td>
          <td class="last">
            <%= button_to pat(:edit), url(:submissions, :edit, :id => submission.id), :method => :get, :class => :button_to %> |
            <%= button_to pat(:delete), url(:submissions, :destroy, :id => submission.id), :method => :delete, :class => :button_to, :onsubmit => "return confirm('#{pat(:confirm)}')" %>
          </td>
        </tr>
        <% end %>
      </table>
      <div class="actions-bar wat-cf">
        <div class="actions"></div>
      </div>
    </div>
  </div>
</div>
<% content_for :sidebar, partial("base/sidebar") %>
